import { createFileRoute } from "@tanstack/react-router";
import { useState } from "react";

import {
  Step1BasicInfo,
  Step2ContactDetails,
  Step3AdditionalInfo,
  StepIndicator,
  type Step1Data,
  type Step2Data,
  type Step3Data,
} from "@/components/form-steps";

export const Route = createFileRoute("/demo/form/simple")({
  component: MultiStepForm,
});

// Combined form data type
type CompleteFormData = {
  step1: Step1Data | null;
  step2: Step2Data | null;
  step3: Step3Data | null;
};

function MultiStepForm() {
  const [currentStep, setCurrentStep] = useState(1);
  const [completedSteps, setCompletedSteps] = useState<number[]>([]);
  
  // Separate state for each step's data
  const [formData, setFormData] = useState<CompleteFormData>({
    step1: null,
    step2: null,
    step3: null,
  });

  // Handle Step 1 submission
  const handleStep1Submit = (data: Step1Data) => {
    console.log("Step 1 completed:", data);
    setFormData(prev => ({ ...prev, step1: data }));
    setCompletedSteps(prev => [...new Set([...prev, 1])]);
    setCurrentStep(2);
  };

  // Handle Step 2 submission
  const handleStep2Submit = (data: Step2Data) => {
    console.log("Step 2 completed:", data);
    setFormData(prev => ({ ...prev, step2: data }));
    setCompletedSteps(prev => [...new Set([...prev, 2])]);
    setCurrentStep(3);
  };

  // Handle Step 3 submission (final submission)
  const handleStep3Submit = (data: Step3Data) => {
    console.log("Step 3 completed:", data);
    const finalData = {
      step1: formData.step1!,
      step2: formData.step2!,
      step3: data,
    };
    
    console.log("Final form submission:", finalData);
    
    // Show success message with all collected data
    alert(`Form submitted successfully!

Data collected:
• Step 1: ${finalData.step1.title} - ${finalData.step1.description}
• Step 2: ${finalData.step2.name} (${finalData.step2.email}, ${finalData.step2.phone})
• Step 3: ${finalData.step3.role} at ${finalData.step3.company}
${finalData.step3.comments ? `• Comments: ${finalData.step3.comments}` : ""}`);

    // Mark step 3 as completed
    setCompletedSteps(prev => [...new Set([...prev, 3])]);
  };

  // Old form code to remove:
    defaultValues: {
      title: "",
      description: "",
      name: "",
      email: "",
      phone: "",
      company: "",
      role: "",
      comments: "",
    },
    validators: {
      onBlur: fullSchema,
    },
    onSubmit: ({ value }) => {
      console.log("Final form submission:", value);
    },
  });

  const validateCurrentStep = async () => {
    try {
      const values = form.state.values;
      console.log("Did I get here??");
      if (currentStep === 1) {
        step1Schema.parse({
          title: values.title,
          description: values.description,
        });
        return true;
      } else if (currentStep === 2) {
        step2Schema.parse({
          name: values.name,
          email: values.email,
          phone: values.phone,
        });
        return true;
      } else if (currentStep === 3) {
        step3Schema.parse({
          company: values.company,
          role: values.role,
          comments: values.comments,
        });
        return true;
      }
    } catch (error) {
      console.log("Validation error for step", currentStep, ":", error);
      // Show validation error to user
      if (error instanceof z.ZodError) {
        const errorMessages = error.issues
          .map((err: any) => err.message)
          .join(", ");
        alert(`Please fix the following errors: ${errorMessages}`);
      }
      return false;
    }

    return false;
  };

  const goToNextStep = async () => {
    console.log(
      `Attempting to go from step ${currentStep} to step ${currentStep + 1}`
    );
    console.log("Current form values:", form.state.values);

    const isValid = await validateCurrentStep();
    console.log(`Validation result for step ${currentStep}:`, isValid);

    if (isValid) {
      const newCompletedSteps = [...new Set([...completedSteps, currentStep])];
      const newCurrentStep = Math.min(currentStep + 1, 3);

      console.log("Setting completed steps to:", newCompletedSteps);
      console.log("Setting current step to:", newCurrentStep);

      setCompletedSteps(newCompletedSteps);
      setCurrentStep(newCurrentStep);
    } else {
      console.log("Validation failed, staying on current step");
    }
  };

  const goToPrevStep = () => {
    setCurrentStep((prev) => Math.max(prev - 1, 1));
  };

  const goToStep = (step: number) => {
    if (step <= Math.max(...completedSteps, currentStep)) {
      setCurrentStep(step);
    }
  };

  const renderStep = () => {
    switch (currentStep) {
      case 1:
        return <Step1BasicInfo form={form} />;
      case 2:
        return <Step2ContactDetails form={form} />;
      case 3:
        return <Step3AdditionalInfo form={form} />;
      default:
        return null;
    }
  };

  return (
    <div
      className="flex items-center justify-center min-h-screen bg-gradient-to-br from-purple-100 to-blue-100 p-4 text-white"
      style={{
        backgroundImage:
          "radial-gradient(50% 50% at 5% 40%, #add8e6 0%, #0000ff 70%, #00008b 100%)",
      }}
    >
      <div className="w-full max-w-3xl p-8 rounded-xl backdrop-blur-md bg-black/50 shadow-xl border-8 border-black/10">
        <StepIndicator
          currentStep={currentStep}
          completedSteps={completedSteps}
          totalSteps={3}
          onStepClick={goToStep}
        />

        <form
          onSubmit={(e) => {
            e.preventDefault();
            e.stopPropagation();
            if (currentStep === 3) {
              form.handleSubmit();
            } else {
              goToNextStep();
            }
          }}
          className="space-y-6"
        >
          {renderStep()}

          {/* Navigation Buttons */}
          <div className="flex justify-between pt-6">
            <button
              type="button"
              onClick={goToPrevStep}
              disabled={currentStep === 1}
              className="px-6 py-2 rounded-lg bg-white/20 text-white hover:bg-white/30 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
            >
              Previous
            </button>

            <div className="flex space-x-3">
              {currentStep < 3 ? (
                <button
                  type="submit"
                  className="px-6 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition-colors"
                >
                  Next Step
                </button>
              ) : (
                <form.AppForm>
                  <form.SubscribeButton label="Submit Form" />
                </form.AppForm>
              )}
            </div>
          </div>
        </form>

        {/* Progress Info */}
        <div className="mt-6 text-center text-white/60 text-sm">
          Step {currentStep} of 3 • {completedSteps.length} step
          {completedSteps.length !== 1 ? "s" : ""} completed
        </div>
      </div>
    </div>
  );
}
